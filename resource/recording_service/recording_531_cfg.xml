<?xml version="1.0" encoding="UTF-8"?>

<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/5.3.1/rti_record.xsd">


    <!-- ================================================================= -->
    <!-- RECORDING SERVICE CONFIGURATION                                     -->
    <!-- ================================================================= -->

    <!-- THE NAME OF THE CONFIGURATION SHALL NOT BE MODIFED, is used by
        commonservice_wrapper.sh to launch the services -->
    <recorder name="recording_service_test">
        <!--  Top-level storage settings -->
        <recorder_database>
            <database_name> rti_recorder_default.dat </database_name>
        </recorder_database>

        <!--  Top-level domain settings -->
        <domain name="domain0">
            <domain_id>0</domain_id>
            <participant_qos base_name="PerformanceLibraries_Modified::recordingProfile"/>
        </domain>

        <topic_group name="Throughput">
            <topics>
                <topic_expr>Throughput</topic_expr>
            </topics>
            <field_expr>*</field_expr>
            <datareader_qos base_name="PerformanceLibraries_Modified::ThroughputQos">
                <multicast>
                    <value>
                        <element>
                            <!-- perftest by default publishes the throughput topic in this address for multicast -->
                            <receive_address>239.255.1.1</receive_address>
                        </element>
                    </value>
                </multicast>
            </datareader_qos>
        </topic_group>

        <record_group name="Default">
            <domain_ref>
                <element> domain0 </element>
            </domain_ref>
            <topic_ref>
                <element> Throughput </element>
            </topic_ref>
            <subscriber_qos base_name="PerformanceLibraries_Modified::ThroughputQos"/>

        </record_group>

    </recorder>

</dds>